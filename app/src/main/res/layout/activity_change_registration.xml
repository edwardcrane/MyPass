<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_registration"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@layout/radial_gradient">

        <!-- Registration Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:divider="@drawable/divider"
            android:showDividers="middle|end">
            <TextView android:id="@+id/change_reg_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_username_hint"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:padding="20dip"/>

            <!-- Password -->
            <TextView android:id="@+id/change_reg_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:singleLine="true"
                android:hint="@string/change_registration_password_hint"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:padding="20dip"/>

            <!-- Password Hint -->
            <TextView android:id="@+id/change_reg_password_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/change_registration_password_hint_hint"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:padding="20dip"/>

            <!--  Email -->
            <TextView android:id="@+id/change_reg_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:hint="@string/change_registration_email_hint"/>
        </LinearLayout>
        <!-- Registration Form Ends -->

        <!-- Footer Start -->
        <LinearLayout android:id="@+id/footer"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@layout/footer_center_logo"
            android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- Footer Ends -->

    </RelativeLayout>
</ScrollView>
